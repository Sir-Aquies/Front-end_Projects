@{
	ViewData["Title"] = "Matching game";
	Layout = "FreeLayout";
}

<link rel="stylesheet" href="~/css/MatchingCSS.css" asp-append-version="true"/>

<div class="background" id="background">
	<div class="right-panel" id="right-panel">
		<div>
			<div>Moves: <span id="total-moves">0</span></div>
			<div>Initial size: <span id="size-display">0</span></div>
		</div>

	</div>
	<div class="menu" id="menu">
		<label>Select the size</label>

		<input type="number" placeholder="Insert size" onblur="InputCheck(this)" id="size-input" value="12"/>
		<span class="error-message" id="error"></span>

		<input type="button" value="Start game" class="start-btn" onclick="StartGame()"/>
	</div>
</div>

<script src="~/js/MatchingScript.js" asp-append-version="true"></script>